<h1>New Scientist Form</h1>

<%= form_for @scientist do |f| %>

    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
        <li><%= error %></li>
        <% end %>
    <% end %>
    <br>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :field_of_study %>
    <%= f.text_field :field_of_study %>
    <br>
    <br>
    <%= f.submit %>
<% end %>