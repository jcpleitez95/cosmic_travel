<h1>New Mission Form</h1>

<%= form_for @mission do |f| %>

    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
        <li><%= error %></li>
        <% end %>
    <% end %>
    <br>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :scientist_id %>
    <%= f.collection_select :scientist_id, Scientist.all, :id, :name, prompt: true %>
    <br>
    <br>
    <%= f.label :planet_id %>
    <%= f.collection_select :planet_id, Planet.all, :id, :name, prompt: true %>
    <br>
    <br>
    <%= f.submit %>
<% end %>